<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"/>

    <!-- Username -->
    <TextView
        android:id="@+id/text_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_below="@id/image_profile"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp"/>

    <!-- Job Title -->
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_below="@id/text_username"
        android:layout_centerHorizontal="true"/>

    <!-- Email Header -->
    <TextView
        android:id="@+id/text_email_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email_header"
        android:textColor="#007399"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_below="@id/text_title"
        android:paddingTop="36dp"
        android:paddingLeft="10dp"/>

    <!--Line to separate key from value -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#007399"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_email_header"
        android:padding="5dp"/>

    <!-- Email Address -->
    <TextView
        android:id="@+id/text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_below="@id/text_email_header"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"/>

    <!-- Skype Header -->
    <TextView
        android:id="@+id/text_skype_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/skype_header"
        android:textColor="#007399"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_below="@id/text_email_header"
        android:paddingTop="54dp"
        android:paddingLeft="10dp"/>

    <!--Line to separate key from value -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#007399"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_skype_header"
        android:padding="5dp"/>

    <!-- Skype Username -->
    <TextView
        android:id="@+id/text_skype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_below="@id/text_skype_header"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"/>

    <!-- Phone Header -->
    <TextView
        android:id="@+id/text_phone_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/phone_header"
        android:textColor="#007399"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_below="@id/text_skype_header"
        android:paddingTop="54dp"
        android:paddingLeft="10dp"/>

    <!--Line to separate key from value -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#007399"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_phone_header"
        android:padding="5dp"/>

    <!-- Phone Number -->
    <TextView
        android:id="@+id/text_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_below="@id/text_phone_header"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"/>

</RelativeLayout>